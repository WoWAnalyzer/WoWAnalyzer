{
  "name": "wowanalyzer",
  "description": "The WoWAnalyzer client-side app.",
  "repository": "https://github.com/WoWAnalyzer/WoWAnalyzer",
  "license": "AGPL-3.0-or-later",
  "private": true,
  "dependencies": {
    "@lingui/core": "^3.13.0",
    "@lingui/macro": "^3.13.0",
    "@lingui/react": "^3.13.0",
    "@types/react-toggle": "^4.0.2",
    "d3-scale": "^2.2.2",
    "d3-scale-chromatic": "^1.3.3",
    "d3-selection": "^1.4.0",
    "d3-shape": "^1.3.5",
    "es6-error": "^4.1.1",
    "make-plural": "^6.2.2",
    "prop-types": "^15.7.2",
    "rc-slider": "^10",
    "react": "^17.0.2",
    "react-animate-height": "^2.0.15",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "react-masonry-component": "^6.2.1",
    "react-redux": "^7.1.3",
    "react-router-dom": "^5.1.2",
    "react-select-search": "^2.1.1",
    "react-textfit": "^1.1.0",
    "react-toggle": "^4.0.2",
    "react-transition-group": "^1.2.1",
    "react-vega": "^7.4.1",
    "react-virtualized": "^9.22.3",
    "redux": "^4.0.4",
    "redux-devtools-extension": "^2.13.8",
    "redux-thunk": "^2.3.0",
    "sass-text-stroke": "1.2.0",
    "swr": "^0.5.6",
    "universal-cookie": "^4.0.4",
    "vega": "~5.21.0",
    "vega-lite": "^5.2.0",
    "@wowanalyzer/react-tooltip-lite": "^3.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@lingui/cli": "^3.13.0",
    "@lingui/loader": "^3.13.0",
    "@martijnhols/eslint-config": "^5.1.0",
    "@sentry/browser": "^5.19.1",
    "@types/enzyme": "^3.10.7",
    "@types/jest": "^24.0.23",
    "@types/node": "^18.6.1",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/react-helmet": "^6.1.0",
    "@types/react-redux": "^7.1.9",
    "@types/react-router-dom": "^5.1.2",
    "@types/react-test-renderer": "^16.9.1",
    "@types/react-virtualized": "^9.21.15",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.5",
    "archiver": "^3.1.1",
    "babel-core": "^7.0.0-bridge.0",
    "cross-env": "^7.0.3",
    "customize-cra": "^1.0.0",
    "decompress": "^4.2.0",
    "dotenv": "^6.2.0",
    "enzyme": "^3.10.0",
    "eslint-plugin-wowanalyzer": "file:./packages/eslint-plugin-wowanalyzer",
    "husky": "^4.3.0",
    "jest-canvas-mock": "^2.3.0",
    "jest-enzyme": "^7.1.2",
    "lint-staged": "13.0.3",
    "patch-package": "^6.2.2",
    "postinstall-postinstall": "^2.1.0",
    "prettier": "~2.2.1",
    "react-app-rewired": "^2.1.11",
    "react-scripts": "^5.0.0",
    "react-test-renderer": "^17.0.2",
    "sass": "^1.49.7",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "eslint-plugin-react": "^7.26.1",
    "prettier-plugin-tailwindcss": "0.1.7"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "safestart": "yarn && react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "test:interface": "yarn test --testPathIgnorePatterns \"integrationTests|/src\\/parser/\"",
    "test:parser": "yarn test ./src/parser --testPathIgnorePatterns integrationTests",
    "test:integration": "yarn test integrationTests --passWithNoTests",
    "typecheck": "tsc",
    "lint": "yarn --silent lint:code && yarn --silent lint:rest",
    "lint:code": "yarn --silent lint:code:specific \"**/*.{js,jsx,ts,tsx}\"",
    "lint:code:specific": "cross-env CODE_STYLE=true eslint --format stylish --max-warnings 0",
    "lint:code:specific:fix": "yarn lint:code:specific --fix",
    "lint:rest": "yarn --silent lint:rest:specific \"**/*.{json,md,css,graphql,yml}\"",
    "lint:rest:specific": "prettier --check",
    "lint:rest:specific:fix": "prettier --write",
    "lint:fix": "yarn --silent lint:code --fix && prettier --write \"**/*.{json,md,css,graphql,yml}\"",
    "extract": "lingui extract --overwrite --clean && yarn lint:rest:specific:fix \"src/localization/*/*.json\"",
    "script": "set NODE_ENV=development&&babel-node",
    "postinstall": "patch-package"
  },
  "lint-staged": {
    "!(*\\.generated)\\.{ts,tsx,js,jsx}": [
      "yarn --silent lint:code:specific:fix"
    ],
    "*.{json,md,css,scss,graphql,yml}": [
      "yarn --silent lint:rest:specific:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "globalSetup": "./jest.setup.js",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.{spec,test}.{ts,tsx}"
    ],
    "snapshotResolver": "./snapshotResolver.js",
    "moduleNameMapper": {
      "^@lingui/loader!.*$": "<rootDir>/linguiMessageMock.js"
    }
  }
}
